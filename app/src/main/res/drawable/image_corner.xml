<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- İnce siyah v<eya beyaz çizgileri çizmek için bir çizgi ekleyin -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/colorBackground" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="?android:attr/colorAccent" /> <!-- Çizgi rengini temanıza göre ayarlayın -->
        </shape>
    </item>
</layer-list>
