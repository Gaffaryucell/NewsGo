    </style>

    <style name="saved_news_description_style" parent="android:TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">#201F1F</item>
    </style>


    <style name="saved_news_layout_style">
        <item name="android:background">#201F1F</item>
    </style>

    <style name="cardView_bg" parent="android:TextAppearance">
        <item name="android:background">#77777777</item>
    </style>
    <style name="up_button_bg">
        <item name="android:src">@drawable/up</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
