    </style>


    <style name="textStyle" parent="android:TextAppearance">
        <item name="android:textColor">#CECDCD</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="search_item_bg">
        <item name="android:src">@drawable/search_light</item>
    </style>

    <style name="person_iv_style">
        <item name="android:background">@drawable/person_iv_bg_light</item>
    </style>
    <style name="titleStyle" parent="android:TextAppearance">
